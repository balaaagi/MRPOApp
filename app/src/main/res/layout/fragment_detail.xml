<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/detailsbackground"
    tools:context="mrpo.balaaagi.me.mrpo.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medicine_name"
            android:textSize="35dp"
            android:textColor="@color/boldTextColor"
            android:text="Medicine Name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/medicine_name_line"
            >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:id="@+id/ll_days"

            android:orientation="horizontal">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar"
                android:id="@+id/calicon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of days"
                android:textColor="@color/boldTextColor"
                android:layout_marginStart="15dp"
                android:id="@+id/daysCount"
                />






        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"

            android:id="@+id/ll_details">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:layout_gravity="left"
                android:id="@+id/morning"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noon"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/noon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:id="@+id/evening"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daysCheck"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross_mark"
                android:id="@+id/morningCheck"
                android:textAlignment="center"
                android:layout_gravity="left"


                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross_mark"
                android:layout_marginLeft="35dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/noonCheck"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross_mark"
                android:layout_marginLeft="32dp"

                android:layout_gravity="center_horizontal"
                android:id="@+id/eveningCheck"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/reminders">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/setReminderButton"
                android:text="Set Reminder"
                android:textColor="@color/primary_material_light"
                android:background="@color/button_material_dark"
                />
        </LinearLayout>
    </LinearLayout>






</RelativeLayout>
